<Window x:Class="Cashin.AddItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cashin"
        mc:Ignorable="d"
        Title="AddItem" Height="768" Width="800">
    <Grid>
        <Grid Background="#83BD75" Height="100" VerticalAlignment="Top">
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                <Image 
                    Source="images/ingles 1.png"
                    Height="60"
                    Margin="20 0 20 0"/>
                <TextBlock FontWeight="Bold" Text="CashIn" Foreground="White" FontSize="48"/>
            </StackPanel>
        </Grid>
        <StackPanel Margin="40 120 40 20">
            <TextBlock Text="Título" FontSize="36"/>
            <TextBox Margin="0 20 0 0" Background="White" FontSize="30"/>
            <TextBlock Text="Quantidade de Dinheiro" FontSize="36" Margin="0 25 0 0"/>
            <TextBox Margin="0 20 0 0" Background="White" FontSize="30"/>
            <TextBlock Text="Descrição" FontSize="36" Margin="0 25 0 0"/>
            <TextBox Height="120" TextWrapping="Wrap" Margin="0 20 0 0" Background="White" FontSize="30"/>
            
        </StackPanel>
    </Grid>
    
</Window>
